<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/poi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_marginEnd="10dp"
        tools:src="@drawable/baseline_description_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/poi_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/adaptive_color"
        tools:text="Home" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/remove_custom_poi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/adaptive_color"
        android:src="@drawable/delete_forever"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"/>

</LinearLayout>