<resources>
    <style name="Base.Theme.NautiChart" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#4CAF50</item>
    </style>

    <style name="MyCustomTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>
    
    <style name="Theme.App.SplashStart" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.NautiChart</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
    </style>
</resources>